<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
     <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
       <a class="navbar-brand" href="/"><span>Bookers</span></a>
       <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
       </button>
       <div class="navbar-collapse collapse" id="navbarNavDropdown" style="">
        <ul class="navbar-nav ml-auto">
         <% if user_signed_in? %>
          <li><%= link_to "Home",user_path(current_user),class:"fas fa-home nav-link text-light" %></li>
          <li><%= link_to "Users","/users",class:"fas fa-users nav-link text-light" %></li>
          <li><%= link_to "Books","/books",class:"fas fa-book-open nav-link text-light" %></li>
          <li><%= link_to "logout", destroy_user_session_path, method: :delete, class:"fas fa-sign-out-alt nav-link text-light" %></li>
          <% else %>
           <li><%= link_to "Home","/",class:"fas fa-home nav-link text-light" %></li>
           <li><%= link_to "About",home_about_path,class:"fas fa-link nav-link text-light" %></li>
           <li><%= link_to "sign up","/users/sign_up",class:"fas fa-user-plus nav-link text-light" %></li>
           <li><%= link_to "login","/users/sign_in",class:"fas fa-sign-in-alt nav-link text-light" %></li>
          <% end %>
        </ul>
       </div>
      </div>
     </nav>
    </header>
   <%= yield %>
  </body>
</html>
